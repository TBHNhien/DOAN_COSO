@model app.Areas.Admin.Models.RegisterModel

@{
    ViewData["Title"] = "Đăng ký người dùng";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>

    <!-- Link đến Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- CSS tùy chỉnh -->
    <style>
        body {
            background: #f8f9fc;
            font-family: 'Nunito', sans-serif;
        }

        .register-container {
            margin-top: 50px;
        }

        .register-card {
            border: 0;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .register-header {
            background: #4e73df;
            color: white;
            padding: 20px;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            text-align: center;
        }

        .btn-register {
            background-color: #4e73df;
            border-color: #4e73df;
            transition: background-color 0.3s;
        }

        .btn-register:hover {
            background-color: #2e59d9;
            border-color: #2e59d9;
        }

        .form-control {
            border-radius: 10px;
            box-shadow: none;
            border: 1px solid #d1d3e2;
        }

        .text-danger {
            font-size: 0.9em;
        }
    </style>
</head>
<body>

    <div class="container register-container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card register-card">
                    <div class="register-header">
                        <h2>Đăng ký người dùng</h2>
                    </div>
                    <div class="card-body">
                        <!-- Hiển thị lỗi chung của form -->
                        @Html.ValidationSummary(false, null, new { @class = "alert alert-danger" })

                        <form action="/Admin/Register/RegisterUser" method="post">
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Email" })
                                <!-- Hiển thị lỗi cho UserName -->
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label asp-for="Password"></label>
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Mật khẩu" })
                                <!-- Hiển thị lỗi cho Password -->
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>

                            <button type="submit" class="btn btn-primary">Đăng ký</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sử dụng phiên bản Bootstrap và Popper.js tương thích -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.6.2/js/bootstrap.min.js"></script>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
