@model IEnumerable<app.Models.Order>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="max-w-7xl mx-auto p-4 bg-white">

        <div class="flex border-b border-zinc-200 dark:border-zinc-700 justify-center">
            <button class="py-2 px-4 text-3xl text-red-500 border-b-2 border-red-500">Tất cả</button>
            
            
        </div>

        
        @foreach (var order in Model)
        {
            <div class="mt-4 p-4 border border-zinc-300 rounded-md dark:border-zinc-700">


                @foreach (var detail in order.OrderDetails)
                {
                    <div class="flex mt-4">
                        <img src="@detail.Product.Image" alt="Product Image" class="w-24 h-24 object-cover border border-zinc-300 rounded-md dark:border-zinc-700">
                        <div class="ml-4 flex-1">
                            <div class="text-zinc-700 text-2xl dark:text-zinc-700">@detail.Product.Name</div>

                            <div class="text-zinc-500 text-2xl dark:text-zinc-700">Số lượng: @detail.Quantity</div>
                            <div class="mt-2 text-red-500 text-2xl">15 ngày trả hàng</div>
                        </div>
                        <div class="text-zinc-700 text-2xl dark:text-zinc-700">@detail.Product.Price.Value.ToString("N0") VNĐ</div>
                    </div>
                    <hr />
                }


                <div class="mt-4 text-zinc-500 text-2xl dark:text-zinc-700">Đơn hàng được đặt vào ngày <span class="text-zinc-700 text-2xl dark:text-zinc-700">@order.CreatedDate.ToString("dd-MM-yyyy")</span>.</div>

                <div class="mt-4 flex justify-between items-center">
                    <div class="text-zinc-700 text-2xl dark:text-zinc-700">Thành tiền: <span class="text-red-500 text-2xl">@order.TotalPrice.ToString("N0") VNĐ</span></div>
                    <div class="flex space-x-2">
                        <button class="px-4 py-2 bg-red-500 text-white text-2xl rounded-md">@(@order.Status == 1 ? "Đã thanh toán" : "Chưa thanh toán")</button>
                        
                    </div>
                </div>

            </div>
        }
        
    </div>
</body>
</html>